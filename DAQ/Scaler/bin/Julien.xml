<?xml version="1.0" encoding="ISO-8859-1"?>

<settings author="Last additions by JW" date="15/09/2015">
  <!-- global Settings for the Scaler & Discriminator--> 
  <global>
    <notes>Awesome Scaler Program</notes>					 				<!-- Comments for the XML-File -->
    <vmelink>0</vmelink>												<!-- 0-3 for A3232 otherwise 0 -->
    <outpath>/home/sandbox/</outpath>				<!-- Path for the output files-->
    <Scaler>0</Scaler> 	                                                    <!-- Activate Scaler or only set Discriminator -->    
  </global>
  
 <!-- Settings for Discriminator -->
  <Discriminator>
    <address>EEEE0000</address>												<!--  Adress of the Discriminator -->
    <SpecificThreshold>0</SpecificThreshold>                                <!--  0: OFF; 1:ON  -->
    <thresholdpath>SpecificTreshold.txt</thresholdpath>                     <!--  Threshold Specific File Path -->
    <t0>20</t0>
    <t1>1</t1>	    												        <!--  0: Channel OFF; 1-255: ON (Getting ignored if SpecificThreshold active)-->
    <t2>0</t2>
    <t3>0</t3>
    <t4>0</t4>
    <t5>0</t5>
    <t6>0</t6>
    <t7>0</t7>
    <t8>0</t8>
    <t9>0</t9>
    <t10>0</t10>
    <t11>0</t11>
    <t12>0</t12>
    <t13>0</t13>
    <t14>0</t14>
    <t15>0</t15>
 </Discriminator>														
  
 <!-- Settings for Scaler -->
 <Scaler>
    <address>DDDD0000</address>                                                                                         <!--  Adress of the Scaler -->
    <rate>10</rate>													<!--  DAQ Rate of the scaler in seconds -->
    <cycles>-1</cycles>													<!--  Number of aquisition cycles. -1: Infinity --> 
    <s0>1</s0>                                                                                                          <!--  0: Channel OFF; 1: ON-->
    <s1>1</s1>                                                                                                          <!--  0: Channel OFF; 1: ON-->
    <s2>0</s2>
    <s3>0</s3>
    <s4>0</s4>
    <s5>0</s5>
    <s6>0</s6>
    <s7>0</s7>
    <s8>0</s8>
