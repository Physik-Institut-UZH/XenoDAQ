    <s10>0</s10>
    <s11>0</s11>
    <s12>0</s12>
    <s13>0</s13>
    <s14>0</s14>
    <s15>0</s15>
 </Scaler>

 <!-- Expert Settings -->
 <Expert>
      <HighVoltage>0</HighVoltage>															<!--  -->		
